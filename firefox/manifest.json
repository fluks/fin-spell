{
    "manifest_version": 2,
    "name": "Fin Spell",
    "version": "0.4.0",
    "author": "fluks",

    "applications": {
        "gecko": {
            "id": "finspell@fluks",
            "update_url": "https://github.com/fluks/fin-spell/raw/master/updates.json",
            "strict_min_version": "62.0"
        }
    },

    "default_locale": "fi",

    "icons": {
        "16": "data/flag_16x16.svg",
        "48": "data/flag_48x48.svg",
        "96": "data/flag_96x96.svg",
        "128": "data/flag_128x128.svg"
    },

    "background": {
        "scripts": [
            "background/libvoikko.js",
            "background/background.js"
        ]
    },

    "browser_action": {
        "browser_style": true,
        "default_popup": "browser_action/browser_action.html",
        "default_title": "Fin Spell",
        "default_icon": {
            "16": "data/flag_16x16.svg",
            "48": "data/flag_48x48.svg",
            "96": "data/flag_96x96.svg",
            "128": "data/flag_128x128.svg"
        }
    },

    "sidebar_action": {
        "browser_style": true,
        "default_panel": "sidebar/sidebar.html",
        "default_title": "Fin Spell",
        "default_icon": {
            "16": "data/flag_16x16.svg",
            "48": "data/flag_48x48.svg",
            "96": "data/flag_96x96.svg",
            "128": "data/flag_128x128.svg"
        },
        "open_at_install": false
    },

    "commands": {
        "open-sidebar": {
            "suggested_key": {
                "default": "Ctrl+Shift+F"
            }
        }
    },

    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },

    "permissions": [
        "storage",
        "<all_urls>",
        "contextMenus",
        "activeTab"
    ]
}
